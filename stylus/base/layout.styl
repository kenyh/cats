/* Layout */

header, footer {
	background-color: #282828;
	padding: 20px 0;
	box-sizing: border-box;
	color: #c3c1c1;
	width: 100%;
}

.layout_a {
	color: #c3c1c1;

}

.layout_a:hover {
	text-decoration: underline;
	color: #fff;
}

header{
	position: fixed;
	top: 0;
}

footer{
	bottom: 0;
}

header img {
	width: 250px;
	display: block;
}

img {
	width: 100%;

}

.same-height {
	max-height: 154%;
	overflow: hidden;
}

.full-height{
	height: 100%;
	padding: 20% 0;
}
