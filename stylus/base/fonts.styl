/* Editorial*/

html, body {
	color:#282828;
	height: 100%;
	font-family: "Montserrat", sans-serif;

}

h1 {
	font-size: 60px;
	text-transform: uppercase;
	font-weight: 700;
}

h2 {
	font-size: 48px;
	text-transform: uppercase;
	font-weight: 700;
	margin-bottom: 30px;


}

h3 {
	font-size: 18px;
	margin-bottom: 20px;
	margin-top: 60px;
}

h4 {
	font-size: 18px;
	line-height: 20px;
	font-weight: 700;
	text-transform: uppercase;
}

p {
	color: #636363;
	line-height: 20px;
}

a {
	text-decoration: none;
	color: #3facef;
}

a.more {
	text-transform: uppercase;
	font-size: 10px;
	text-decoration: underline;
	margin-top: 20px;
}

ol li {
	counter-increment: step-counter;
}

ol li::before {
	content: counter(step-counter);
	display: inline;
}